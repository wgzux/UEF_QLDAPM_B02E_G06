<?php

namespace app\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class Activity extends Model
{
    use HasFactory;

    protected $fillable = [
        'activity_type', // 'Event', 'Tour'
        'name',
        'start_datetime',
        'duration_mins',
        'capacity',
        'price'
    ];

    protected $casts = [
        'start_datetime' => 'datetime',
        'price' => 'decimal:2',
    ];
}